---
import Contador from "../components/Contador.astro";
import HelloWorld from "../components/Hello.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <h1>Astro</h1>
    <p>
      Lorem ipsum dolor sit amet consectetur, adipisicing elit. Enim labore aut,
      veritatis obcaecati consequatur aperiam perferendis aliquid eum vitae iste
      cumque distinctio velit saepe doloribus nobis magni, dolore adipisci? Eos.
    </p>

    <div class="container">
      <p>Componente Hello usando Astro</p>
      <HelloWorld name="Astro" />
      <HelloWorld name="Astro 2" />
    </div>

    <div class="container">
      <p>Componente Contador usando Astro</p>
      <div>
        <Contador />
        <!-- <button id="reset">Reset</button> -->
      </div>
    </div>

    <select
      id="select"
      style="font-size: 12pt; padding: .5rem; border: 2px solid #000; width: fit-content;"
    >
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
    </select>

    <div
      id="counter"
      style="font-size: 24pt; padding: 1rem; border: 2px solid #000; width: fit-content;"
    >
      0
    </div>
  </body>
</html>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // const btn = document.getElementById("reset");
    // btn?.addEventListener("click", () => {
    //   btn.textContent = "Reset " + Math.floor(Math.random() * 100).toString();
    // });

    const counter = document.getElementById("counter");
    setInterval(() => {
      counter.textContent = Math.floor(Math.random() * 100).toString();
    }, 1000);
  });
</script>

<style>
  body {
    font-family: system-ui, sans-serif;
    margin: 2rem;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
</style>
