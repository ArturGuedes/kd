---
import { Loader2 } from "@lucide/astro";
const { size = 24, ...props } = Astro.props;
---

<Loader2 data-loader-icon size={size} {...props} />

<style>
  [data-loader-icon] {
    animation: rotate 5s linear infinite;
  }

  @keyframes rotate {
    to {
      transform: rotate(360deg);
    }
  }
</style>
